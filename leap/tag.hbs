{{!-- The tag below means - insert everything in this file into the {body} of the default.hbs template --}}
{{!< default}}

{{!-- The main content area - Masonry grid --}}
<main id="content" class="container" role="main">
	{{#tag}}
	<div class="tags-container" data-tag="{{slug}}">
		{{#get "tags" limit="all"}}
		    <ul class="tags">
		    {{#foreach tags}}
		        <li>
		            <a href="{{url}}" title="{{name}}" class="tag tag-{{id}} {{slug}}">{{name}}</a>
		        </li>  
		    {{/foreach}}
		    </ul>
		{{/get}}
	</div>
	{{/tag}}
	<div class="grid">
	    {{> "loop"}}
	    <div class="grid-sizer"></div>
	</div>
</main>
{{pagination}}