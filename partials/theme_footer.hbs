    <footer class="site-footer clearfix">
        <div class="container">
            <div class="container-footer">
                <div class="tags-col">
                    <h3>Tags</h3>
                    {{#get "tags" limit="all"}}
                        <ul>
                            {{#foreach tags}}
                                <li>
                                    <a href="{{url}}">{{name}}</a>
                                </li>
                            {{/foreach}}
                        </ul>
                    {{/get}}
                </div>
                <div class="newsletter-col">
                    <h3>Newsletter</h3>
                    {{subscribe_form
                        form_class="gh-signin"
                        input_class="gh-input"
                        button_class="btn"
                        placeholder="Your email address"
                    }}
                </div>
            </div>
            <div class="social">
                {{#if @blog.facebook}}
                    <a href="{{facebook_url}}" class="facebook" title="{{@blog.facebook}}"></a>
                {{/if}}
                {{#if @blog.twitter}}
                    <a href="{{twitter_url}}" class="twitter" title="{{@blog.twitter}}"></a>
                {{/if}}
            </div>
            <section class="copyright">Copyright &copy; {{date format="YYYY"}}, <a href="{{@blog.url}}">{{@blog.title}}</a>. All Right Reserved.</section>
        </div>
    </footer>